<!DOCTYPE html>
<html lang="{% block language %}{% endblock %}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block metatags %}{% endblock %}

    {% block stylesheets %}
        <link href="{{ asset('css/normalize.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/skeleton.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/custom.css') }}" rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
        <script src="https://unpkg.com/htmx.org@1.3.1" integrity="sha384-fIzHaKYVrEFxI4/dWpMzf9tlIUPU0HmW8w/8s4nQHvZmGQhXhnEM6aenC6QFkd7e" crossorigin="anonymous"></script>
    {% endblock %}
    <link rel="icon" href="{{ asset('image/favicon.ico') }}" title="Favicon">
</head>
<body>
{% block body %}{% endblock %}
</body>
</html>

